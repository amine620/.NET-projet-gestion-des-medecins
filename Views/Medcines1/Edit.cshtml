<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@*<script src="~/Scripts/jquery-1.10.2.js"></script>*@

@section Scripts {
<script>
        $(function () {
            $("#save").click(function () {
                if ($("#image").val() == "") {
                    $("#error-div").fadeIn();
                    $("#verror").append("la photo de profil est vide");
                    return false;
                }
            });
        });
</script>
    @Scripts.Render("~/bundles/jqueryval")
