@model siteweb.Models.Medcine
<link href="~/Content/medecine.css" rel="stylesheet" />

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    @using (Html.BeginForm("Edit", "Medcines1", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
